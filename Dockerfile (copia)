FROM python:3.6
MAINTAINER Roy Meissner <meissner@informatik.uni-leipzig.de>

#WORKDIR /opt/docker

# ---------------- #
#   Installation   #
# ---------------- #

#ADD stage/opt /opt

RUN pip install -r requirements.txt

# ----------------- #
#   Configuration   #
# ----------------- #

EXPOSE 9000

# ----------- #
#   Cleanup   #
# ----------- #

RUN apt-get update && \
    		apt-get autoremove -y && \
		apt-get -y clean && \
		rm -rf /var/lib/apt/lists/*

# -------- #
#   Run!   #
# -------- #

ENTRYPOINT ["./app/appmain.py"]
